WindowManager:
    MainWindow:
    SecondWindow:


<Label>:
    size_hint : 0.15,0.035

<Button>:
    size_hint : 0.1,0.035

<MainWindow>:
    name : "main"



    FloatLayout:

        Label :
            text : "Mail Address"
            pos_hint : {"x":0.25,"y":0.9}

        TextInput :
            multiline : False
            size_hint : 0.5,0.035
            pos_hint : {"x":0.45,"y":0.9}
        Label :
            text : "Mail Address"
            pos_hint : {"x":0.25,"y":0.75}

        TextInput :
            multiline : False
            size_hint : 0.5,0.035
            pos_hint : {"x":0.45,"y":0.75}


        Label :
            text : "Mail Address"
            pos_hint : {"x":0.25,"y":0.6}

        TextInput :
            multiline : False
            size_hint : 0.5,0.035
            pos_hint : {"x":0.45,"y":0.6}

        Button :
            pos_hint : {"x":0.45,"y":0.4}
            text : "Start"
            on_release :
                app.root.current = "second"
                root.manager.transition.direction = "left"

<SecondWindow>:
    name : "second"
    Button :
        text : "GoBack"
        pos_hint : {"center_x" : 0.5 , "center_y" : 0.5}
        on_release :
            app.root.current = "main"
            root.manager.transition.direction = "right"
