        on_release :
            app.root.current = "main"
            root.manager.transition.direction = "left"

    MDRectangleFlatButton :
        text : "戻る"
        pos_hint : {"" : 0.1 , "center_y" : 0.980}
        size_hint : 0.2,0.035
