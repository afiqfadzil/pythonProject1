                size_hint_x:0.8
                column:1
                rows:6

                MDLabel :

                    text : "年齢"
                    size_hint_x:1.0
                    halign:"left"
                    font_size : self.width/15
                    size_hint_y:0.15


                MDTextField :
                    id : age
                    text: "65"
                    multiline : False
                    hint_text:"＊必須"

                    helper_text: "16~95歳"
                    required: True
                    font_name : "meiryo.ttc"
                    size_hint_x:1.0
