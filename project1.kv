            GridLayout:
                rows:1
                column:6

                halign:"left"

                row_default_height :"50"

                pos_hint:{"center_x" : 0.5, "center_y" : 0.5}


                size_hint_y:0.2
                size_hint_x:0.8
                MDLabel:
                    text:"性別:"
                    font_size : self.width/3
                MDLabel:
                    text:"男性 "
                    halign :"right"
                    font_size : self.width/3


                CheckBox:
                    id: male_gender
                    group: "gender"
                    active: False
                    color:"#FFFFFF"

                    size_hint : 0.30,0.04
                MDLabel:
                    text:"女性 "
                    halign:"right"
                    font_size : self.width/3

                CheckBox:
                    id: female_gender
                    group: "gender"
                    active: False
                    size_hint : 0.30,0.040
                    color:"#FFFFFF"
                MDLabel:
                    text:"他の "
                    halign:"right"
                    font_size :self.width/3

                CheckBox:
                    id: other_gender
                    group: "gender"
                    active: False
                    size_hint : 0.30,0.035
                    color:"#FFFFFF"
            GridLayout
                rows:3
                column:1

                halign:"left"

                row_default_height :"50"
                padding : "20dp"
                pos_hint:{"center_x" : 0.5, "center_y" : 0.5}
                size_hint_y:0.1

                MDLabel :
                    id : error_label_main
                    text : ""
                    size_hint_x :1
                    theme_text_color: "Custom"
                    text_color: "red"
                    font_size : self.width/20
                MDRectangleFlatIconButton :
                    id : "practice_button"
                    text_color : "#000000"
                    text : "測定練習"
                    icon: "play"
                    font_size : "20dp"
                    size_hint_x:1.0
                    on_release :
                        root.practice_flag()
                        root.data_calculation()




                MDRectangleFlatIconButton :
                    id : "test_button"
                    text_color : "#000000"
                    text : "スタート"
                    font_size : "20dp"
                    icon: "play"
                    size_hint_x:1.0
                    on_release :
                        root.test_flag()
                        root.data_calculation()






    MDTopAppBar:
        font_size : "20sp"
        left_action_items: [['arrow-left', lambda x: root.back()]]

    Overlay:
        id: dim_overlay
        opacity: 1 if root.ids.nav_drawer.state == "open" else 0
        on_touch_down: root.ids.nav_drawer.set_state("closed")
    MDNavigationDrawer:
        id: nav_drawer
        BoxLayout:
            orientation: 'horizontal'



