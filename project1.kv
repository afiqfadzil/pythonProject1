#:import Factory kivy.factory.Factory
<ErrorPopup>
    auto_dismiss : False
    size_hint : 0.5, 0.25
    pos_hint: {"center_x" : 0.5 , "center_y": 0.5}
    title : "エラー"
    font_name: "meiryo.ttc"
    separator_color :  "#1c1c2c"
    md_bg_color : "#baacd4"
    title_align : "center"
    MDGridLayout
        rows :2
        cols : 1
        MDLabel:
            text : "エラーが発生しました、メイン画面に戻ります。"
            font_size : self.height/7
            halign : "center"
        MDGridLayout
            rows :1
            cols : 2
            padding :"20dp"
            MDRectangleFlatButton:
                text : "閉じる"
                size_hint_x : 1
                halign : "center"
                on_release :
                    root.btn()
                    root.dismiss()
            MDRectangleFlatButton:
                text : "再開"
                size_hint_x : 1
                halign : "center"
                on_release :
                    root.resume()
                    root.dismiss()


