            row_default_height :"70"

            pos_hint:{"center_x" : 0.5 , "center_y" : 0.55}


            size_hint_y: 0.3
            size_hint_x:0.8
            column:1
            rows : 1
            MDCard:
                fill_color: "red"
                orientation: "horizontal"
